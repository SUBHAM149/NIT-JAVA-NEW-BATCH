//=> display employee details whose id = 103 ?
  
      SELECT * FROM emp WHERE empid = 103 ; 
 
 //=> display male employees list ?

     SELECT * FROM emp WHERE gender='m' ; 

 //=> employees earning more than 5000 ?

    SELECT * FROM emp WHERE sal > 5000 ; 

 //=> employees joined after 2020 ?

     SELECT * FROM emp WHERE hiredate > 2020;   => ERROR
  
    SELECT * FROM emp WHERE hiredate >  '31-DEC-2020' ; 
 
//=> employees joine before 2020 ?

   SELECT * FROM emp WHERE hiredate < '01-JAN-2020'  ; 

 //=> employees not working as analyst ?

     SELECT * FROM emp WHERE  job <> 'analyst' ;

//=> display ENAME  JOB  ?
SQL> SELECT ENAME,
  2  CASE JOB
  3  WHEN 'clerk' THEN 'WORKER'
  4  WHEN 'SUPERVISER' THEN 'BOSS'
  5  ELSE 'EMPLOYEE'
  6  END AS JOB
  7  FROM EMP;

ENAME      JOB
---------- --------
sachin     WORKER
verri      EMPLOYEE
sindhu     EMPLOYEE
SUBHAM     EMPLOYEE
RAVI       EMPLOYEE
VEERAA     BOSS

6 rows selected.
//=>  display  ENAME  GENDER  ?
SQL> SELECT ename,
  2                     CASE gender
  3                     WHEN 'm' THEN  'male'
  4                     WHEN 'f' THEN 'female'
  5                     END  as gender
  6     FROM emp ;

ENAME      GENDER
---------- ------
sachin     male
verri      female
sindhu     female
